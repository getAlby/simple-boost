{
  "name": "simple-boost",
  "version": "1.2.0",
  "description": "The one-click tipping button for your website",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/simple-boost.cjs",
    "default": "./dist/simple-boost.js"
  },
  "main": "./dist/simple-boost.cjs",
  "module": "./dist/simple-boost.module.js",
  "unpkg": "./dist/simple-boost.umd.js",
  "types": "dist/simple-boost.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "microbundle",
    "build:watch": "microbundle watch",
    "clean": "rimraf dist docs",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "docs": "npm run docs:clean && npm run docs:build",
    "docs:clean": "rimraf docs",
    "docs:build": "vite build",
    "docs:serve": "vite preview",
    "serve": "vite",
    "test": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "checksize": "gzip -9 dist/simple-boost.cjs.js | wc -c"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "web-components",
    "lightning",
    "bitcoin",
    "value4value"
  ],
  "author": "Alby",
  "license": "MIT",
  "dependencies": {
    "@getalby/bitcoin-connect": "^3.6.3",
    "@getalby/lightning-tools": "^5.1.0",
    "@getalby/sdk": "^3.8.2",
    "js-confetti": "^0.10.2",
    "lit": "^3.2.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@web/test-runner": "^0.13.27",
    "eslint": "^8.15.0",
    "microbundle": "^0.15.0",
    "@webbtc/webln-types": "^3.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vite": "^4.0.0"
  }
}
